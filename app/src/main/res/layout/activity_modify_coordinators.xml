<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manan.dev.clubconnect.EditEvent.ModifyCoordinators">
    <AutoCompleteTextView
        android:id="@+id/etEventCoord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/etEventCoord"
        android:layout_above="@id/llButtons"
        android:id="@+id/ll_coordinators"
        android:padding="10dp"
        android:orientation="vertical"/>
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/bCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:background="@drawable/md_transparent_border"
            android:backgroundTint="#aaa"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/md_transparent_border"
            android:backgroundTint="#aaa"
            android:text="OK"/>
    </LinearLayout>
</RelativeLayout>
